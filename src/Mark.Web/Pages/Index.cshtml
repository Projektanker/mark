@page
@model Mark.Web.Pages.IndexModel

<Heading1>MARK</Heading1>

<div class="flex flex-col items-center mt-6">
    <form action="api/pdf"
          method="POST"
          target="_blank"
          enctype="multipart/form-data"
          class="flex flex-col"
          x-data="{ files: 0 }">
        <MultiFileInput id="files" name="files" x-model="files" />
        <button type="submit" class="mt-6">
            <ButtonAppear>
                Submit
            </ButtonAppear>
        </button>
        <button type="reset"
                class="text-cyan-600 hover:text-cyan-500 transition-colors mt-2"
                x-on:click="files=0">
            Reset
        </button>
    </form>
</div>